	function validar()
	{
		d = document.form1;


		var nome  = form1.nome.value;
		var email = form1.email.value;
		var endereco = form1.endereco.value;
		var empresa = form1.empresa.value;
		var mensagem = form1.mensagem.value;		

		

		if (d.nome.value == "")
		{	
			alert('Campo "nome" em branco');
			d.nome.focus();	
			return false;
		
			if (d.nome.value < 3) 
			 {
				alert('Seu nome só tem essas letras?');
				d.nome.focus();
				return false;
			}
	
		}
		
		
		if (d.email.value == "") 
		{
			alert('Preencha corretamente o email');
			d.email.focus();
			return false;
	
		}



		
		var entrada = entrada.email;
		var arroba = entrada.value.indexOf('@');
		var ponto = entrada.value.substring(arroba + 1, entrada.length);
		for (var i = 0; i < ponto.length; i++) {
		if (ponto.charAt(i) == ".") {
		break
		}
		}
		if (entrada.value.length <= 0) {
		alert("Email inválido!");
		d.email.focus();
		return false


		
		
		

		
 

	}




















